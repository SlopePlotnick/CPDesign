program Add;
const m :=20;
var a,b,c,d,e,f;
	procedure add(h,q);
	var sum,return;
	begin
		sum:=0;
		sum:=q+h;
		sum:=sum+1;
		return:=sum;
		write(h+q)
	end;
	procedure sum1(x);
	var j,sum;
	begin
		j:=1;
		a:=1;
		sum:=0;
		while j<=x do
		begin
			sum:=sum+j;
			j:=j+1
		end;
		write(sum)
	end
begin
	read(a);
	write(a);
	read(e);
	write(e);
	read(f);
	write(f);
	call sum1(a);
	call add(e,f)
end